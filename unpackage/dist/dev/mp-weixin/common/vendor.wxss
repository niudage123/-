
.grace-swiper {
  width: 100%;
  height: 200rpx;
  position: relative;
  box-shadow: 0px 2px 5px #5F646E;
}
.grace-swiper swiper-item {
  width: 100%;
  font-size: 0;
  line-height: 0;
}
.grace-swiper swiper-item image {
  width: 100%;
}
.grace-swiper .title {
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  overflow: hidden;
  text-align: center;
  position: absolute;
  z-index: 99;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.2);
  color: #FFF;
}
.grace-swiper swiper-item navigator {
  width: 100%;
}
.grace-swiper swiper-item navigator image {
  width: 100%;
}
.grace-number-box {
  width: 220rpx;
  height: 65rpx;
  display: -webkit-box !important;
  display: -webkit-flex !important;
  display: flex !important;
  overflow: hidden;
  -webkit-flex-wrap: nowrap;
  flex-wrap: nowrap;
}
.grace-number-box .doBtn {
  width: 65rpx;
  line-height: 60rpx;
  height: 65rpx;
  text-align: center;
  font-size: 50rpx;
  color: #333;
}
.grace-number-box ._input {
  display: block;
  width: 90rpx !important;
  height: 35rpx !important;
  line-height: 35rpx !important;
  color: #333;
  padding: 15rpx 0 !important;
  background: #F3F4F5;
  text-align: center !important;
}